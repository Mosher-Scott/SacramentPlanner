@model Sacrament_Planner.Models.Meetings

@{
    ViewData["Title"] = "Edit";
}
    <div class="main-header">
        <img src="~/images/meetings.jpg" alt="meeting" />
        <h1>@Meetings.WardTitle</h1>
    </div>
<h1 class="move-left">Edit Sacrament Meeting</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />

            <div class="blueBackground">
                <h4>General Information</h4>
                <div class="form-group">
                    <label asp-for="MeetingDate" class="control-label"></label>
                    <input asp-for="MeetingDate" class="form-control" />
                    <span asp-validation-for="MeetingDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Presiding" class="control-label"></label>
                    <select asp-for="Presiding" class="form-control" asp-items="ViewBag.BishopricNames">
                        <option value="@Model.Presiding" disabled hidden>@Model.Presiding</option>
                    </select>
                    <span asp-validation-for="Presiding" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="Conducting" class="control-label"></label>
                    <select asp-for="Conducting" class="form-control" asp-items="ViewBag.BishopricNames">
                        <option value="@Model.Conducting" disabled hidden>@Model.Conducting</option>
                    </select>
                    <span asp-validation-for="Conducting" class="text-danger" />
                </div>
            </div>

            <div class="blueBorder">
                <h4>Prayers</h4>
                <div class="form-group">
                    <label asp-for="OpeningPrayer" class="control-label"></label>
                    <select asp-for="OpeningPrayer" class="form-control" asp-items="ViewBag.MemberNames">
                        <option value="@Model.OpeningPrayer" disabled hidden>@Model.OpeningPrayer</option>
                    </select>
                    <span asp-validation-for="OpeningPrayer" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="ClosingPrayer" class="control-label"></label>
                    <select asp-for="ClosingPrayer" class="form-control" asp-items="ViewBag.MemberNames">
                        <option value="@Model.ClosingPrayer" disabled hidden>@Model.ClosingPrayer</option>
                    </select>
                    <span asp-validation-for="ClosingPrayer" class="text-danger" />
                </div>
            </div>

            <div class="blueBackground">
                <h4>Music</h4>
                <div class="form-group">
                    <label asp-for="OpeningHymn" class="control-label"></label>
                    <select asp-for="OpeningHymn" class="form-control" asp-items="ViewBag.HymnNames">
                        <option value="@Model.OpeningHymn" disabled hidden>@Model.OpeningHymn</option>
                    </select>
                    <span asp-validation-for="OpeningHymn" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="OpeningHymnNumber" class="control-label"></label>
                    <input asp-for="OpeningHymnNumber" class="form-control" />
                    <span asp-validation-for="OpeningHymnNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SacramentHymn" class="control-label"></label>
                    <select asp-for="SacramentHymn" class="form-control" asp-items="ViewBag.HymnNames">
                        <option value="@Model.SacramentHymn" disabled hidden>@Model.SacramentHymn</option>
                    </select>
                    <span asp-validation-for="SacramentHymn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SacramentHymnNumber" class="control-label"></label>
                    <input asp-for="SacramentHymnNumber" class="form-control" />
                    <span asp-validation-for="SacramentHymnNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IntermediateSong" class="control-label"></label>
                    <select asp-for="IntermediateSong" class="form-control" asp-items="ViewBag.HymnNames">
                        <option value="@Model.IntermediateSong" disabled hidden>@Model.IntermediateSong</option>

                    </select>
                    <span asp-validation-for="IntermediateSong" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="IntermediateSongNumber" class="control-label"></label>
                    <input asp-for="IntermediateSongNumber" class="form-control" />
                    <span asp-validation-for="IntermediateSongNumber" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="IntermediateMusicalNumber" class="control-label"></label>
                    <input asp-for="IntermediateMusicalNumber" class="form-control" />
                    <span asp-validation-for="IntermediateMusicalNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClosingHymn" class="control-label"></label>
                    <select asp-for="ClosingHymn" class="form-control" asp-items="ViewBag.HymnNames">
                        <option value="@Model.ClosingHymn" disabled hidden>@Model.ClosingHymn</option>
                    </select>
                    <span asp-validation-for="ClosingHymn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClosingHymnNumber" class="control-label"></label>
                    <input asp-for="ClosingHymnNumber" class="form-control" />
                    <span asp-validation-for="ClosingHymnNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="blueBorder">
                <h4>Speakers</h4>
                <div class="form-group">
                    <label asp-for="Speaker1" class="control-label"></label>
                    <select asp-for="Speaker1" class="form-control" asp-items="ViewBag.MemberNames">
                        <option value="@Model.Speaker1" disabled hidden>@Model.Speaker1</option>
                        <option value="">--No Speaker--</option>
                    </select>
                    <span asp-validation-for="Speaker1" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="Speaker1Topic" class="control-label"></label>
                    <input asp-for="Speaker1Topic" class="form-control" />
                    <span asp-validation-for="Speaker1Topic" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Speaker2" class="control-label"></label>
                    <select asp-for="Speaker2" class="form-control" asp-items="ViewBag.MemberNames">
                        <option value="@Model.Speaker2" disabled hidden>@Model.Speaker2</option>
                        <option value="">--No Speaker--</option>
                    </select>
                    <span asp-validation-for="Speaker2" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="Speaker2Topic" class="control-label"></label>
                    <input asp-for="Speaker2Topic" class="form-control" />
                    <span asp-validation-for="Speaker2Topic" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @if (Model.Speaker3 == null)
                    {
                        <label asp-for="Speaker3" class="control-label"></label> <span>- Add Speaker</span>
                    }
                    else
                    {
                        <label asp-for="Speaker3" class="control-label"></label>
                    }

                    <select asp-for="Speaker3" class="form-control" asp-items="ViewBag.MemberNames">
                        <option value="@Model.Speaker3" disabled hidden>@Model.Speaker3</option>
                        <option value="">--No Speaker--</option>
                    </select>
                    <span asp-validation-for="Speaker3" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="Speaker3Topic" class="control-label"></label>
                    <input asp-for="Speaker3Topic" class="form-control" />
                    <span asp-validation-for="Speaker3Topic" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @if (Model.Speaker4 == null)
                    {
                        <label asp-for="Speaker4" class="control-label"></label> <span>- Add Speaker</span>
                    }
                    else
                    {
                        <label asp-for="Speaker4" class="control-label"></label>
                    }
                    <select asp-for="Speaker4" class="form-control" asp-items="ViewBag.MemberNames">
                        <option value="@Model.Speaker4" disabled hidden>@Model.Speaker4</option>
                        <option value="">--No Speaker--</option>
                    </select>
                    <span asp-validation-for="Speaker4" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="Speaker4Topic" class="control-label"></label>
                    <input asp-for="Speaker4Topic" class="form-control" />
                    <span asp-validation-for="Speaker4Topic" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @if (Model.Speaker5 == null)
                    {
                        <label asp-for="Speaker5" class="control-label"></label> <span>- Add Speaker</span>
                    }
                    else
                    {
                        <label asp-for="Speaker5" class="control-label"></label>
                    }
                    <select asp-for="Speaker5" class="form-control" asp-items="ViewBag.MemberNames">
                        <option value="@Model.Speaker5" disabled hidden>@Model.Speaker5</option>
                        <option value="">--No Speaker--</option>
                    </select>
                    <span asp-validation-for="Speaker5" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="Speaker5Topic" class="control-label"></label>
                    <input asp-for="Speaker5Topic" class="form-control" />
                    <span asp-validation-for="Speaker5Topic" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @if (Model.Speaker6 == null)
                    {
                        <label asp-for="Speaker6" class="control-label"></label> <span>- Add Speaker</span>
                    }
                    else
                    {
                        <label asp-for="Speaker6" class="control-label"></label>
                    }
                    <select asp-for="Speaker6" class="form-control" asp-items="ViewBag.MemberNames">
                        <option value="@Model.Speaker6" disabled hidden>@Model.Speaker6</option>
                        <option value="">--No Speaker--</option>
                    </select>
                    <span asp-validation-for="Speaker6" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="Speaker6Topic" class="control-label"></label>
                    <input asp-for="Speaker6Topic" class="form-control" />
                    <span asp-validation-for="Speaker6Topic" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @if (Model.Speaker7 == null)
                    {
                        <label asp-for="Speaker7" class="control-label"></label> <span>- Add Speaker</span>
                    }
                    else
                    {
                        <label asp-for="Speaker7" class="control-label"></label>
                    }
                    <select asp-for="Speaker7" class="form-control" asp-items="ViewBag.MemberNames">
                        <option value="@Model.Speaker7" disabled hidden>@Model.Speaker7</option>
                        <option value="">--No Speaker--</option>
                    </select>
                    <span asp-validation-for="Speaker7" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="Speaker7Topic" class="control-label"></label>
                    <input asp-for="Speaker7Topic" class="form-control" />
                    <span asp-validation-for="Speaker7Topic" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index" class="btn btn-danger">Cancel Edit</a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

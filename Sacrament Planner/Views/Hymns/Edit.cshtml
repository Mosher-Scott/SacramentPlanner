@model Sacrament_Planner.Models.Hymns

@{
    ViewData["Title"] = "Edit";
}
    <div class="main-header">
        <img src="~/images/hymns.jpg" alt="hymn book" />
        <h1 class="move-left">@Meetings.WardTitle Hymns</h1>
    </div>
<h1>Edit Hymn</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="HymnName" class="control-label"></label>
                <input asp-for="HymnName" class="form-control" />
                <span asp-validation-for="HymnName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PageNumber" class="control-label"></label>
                <input asp-for="PageNumber" class="form-control" />
                <span asp-validation-for="PageNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
